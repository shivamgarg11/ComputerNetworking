<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.shivam.computernetworking.fragments.SelectiveRepeat"
    android:orientation="vertical">



    <ScrollView
        android:id="@+id/scrol2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/textiewselectiverepeat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:text="@string/selRep_desc"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
    </ScrollView>

    <com.pddstudio.highlightjs.HighlightJsView
        android:padding="20dp"
        android:layout_weight="1"
        android:id="@+id/code2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_weight="1"
        android:id="@+id/scroll22"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

           <TextView
               style="@style/TextAppearance.AppCompat.Headline"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Enter the no. of bits for the sequence no. :"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Submit"
                android:id="@+id/submit2"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONSOLE"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/console2"/>



        </LinearLayout>

    </ScrollView>






    <android.support.design.widget.BottomNavigationView
        android:layout_gravity="bottom"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"
        app:menu="@menu/bottomnav" />
</LinearLayout>
